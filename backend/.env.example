# App
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=change-me-please-long-random-string
JWT_EXPIRES_IN=7d
JWT_ISSUER=orcamentos-api
JWT_AUDIENCE=web
ENFORCE_HTTPS=false

# Database (Prisma/MySQL)
# Example (local): mysql://user:password@localhost:3306/dbname
# Example (Railway): mysql://root:password@host:port/railway
DATABASE_URL=mysql://user:password@host:3306/dbname

# Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Email (SMTP)
# Para Gmail: smtp.gmail.com / 587 / false
# Para Gmail com App Password: use a senha de app gerada no Google
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_PASSWORD=your-app-password-here
